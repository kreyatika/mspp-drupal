{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}

{{ attach_library('mspp/node-article') }}

<article{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {% if not page %}
    <h2{{ title_attributes }}>
      <a href="{{ url }}" rel="bookmark">{{ label }}</a>
    </h2>
  {% endif %}
  {{ title_suffix }}

  <div{{ content_attributes.addClass('node__content') }}>
    <div class="container">
      <div class="row g-4">
        
        <div class="col-lg-9">
          {% if content.field_image %}
            <div class="node-article__image mb-4 node-page__image">
              {% set image_markup = content.field_image|render|render %}
              {% set image_src = (image_markup|split('src="')|length > 1) ? (image_markup|split('src="')[1]|split('"')[0]) : '' %}
              {% set image_alt = (image_markup|split('alt="')|length > 1) ? (image_markup|split('alt="')[1]|split('"')[0]) : label %}
              {% if image_src %}
                <img src="{{ image_src }}" alt="{{ image_alt }}" class="img-fluid">
              {% else %}
                {{ content.field_image }}
              {% endif %}
            </div>
          {% endif %}

          {% if content.field_article_date or node.createdtime %}
            <div class="node-article__meta text-muted small mb-3">
              <i class="bi bi-calendar3 me-2"></i>
              {% if content.field_article_date %}
                {{ content.field_article_date }}
              {% else %}
                {{ node.createdtime|date('d/m/Y') }}
              {% endif %}
            </div>
          {% endif %}

          {% if content.field_article_category %}
            <div class="node-article__category mb-3">
              {{ content.field_article_category }}
            </div>
          {% endif %}

          <div class="node-article__body">
            {{ content|without('field_image', 'field_article_date', 'field_article_category') }}
          </div>
        </div>

        <div class="col-lg-3">
          
        </div>

      </div>
    </div>
  </div>
</article>
