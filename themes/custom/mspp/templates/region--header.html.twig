{#
/**
 * @file
 * Theme override to display the header region.
 *
 * Available variables:
 * - content: The content for this region.
 * - attributes: HTML attributes for the region <div>.
 */
#}
<div class="bg-primary site-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-10 col-md-4">
                {{ drupal_block('system_branding_block') }}
            </div>

            <div class="col-2 col-md-8 d-flex justify-content-end align-items-center">
                <a href="/mspp_drupal/recherche" class="mobile-search-toggle d-lg-none me-2" aria-label="Search">
                    <i class="fas fa-search"></i>
                </a>
                <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="d-none d-md-block">
                    <div class="text-end mb-2">
                        <a href="" class="text-white text-decoration-none small">Messagerie</a>
                    </div>
                    <div class="d-flex justify-content-end">
                        <form class="search-form" action="/mspp_drupal/recherche" method="get">
                            <div class="input-group">
                                <input type="text" class="form-control form-control-sm" name="s" placeholder="Rechercher..." value="">
                                <button class="btn btn-transparent btn-sm" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>