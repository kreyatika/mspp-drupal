{#
/**
 * @file
 * Theme override to display the header region.
 *
 * Available variables:
 * - content: The content for this region.
 * - attributes: HTML attributes for the region <div>.
 */
#}
<div class="bg-primary site-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-6 col-md-4">
                {{ drupal_block('system_branding_block') }}
            </div>

            <div class="col-6 col-md-8">
                <div class="d-none d-md-block">
                    <div class="text-end mb-2">
                        <a href="#" class="text-white text-decoration-none mb-3">Messagerie</a>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <form class="search-form d-none d-md-block" action="" method="get">
                        <div class="input-group">
                            <input type="text" class="form-control form-control-sm" style="width: 200px;" name="s" placeholder="Rechercher..." value="">
                                <button class="btn btn-transparent btn-sm" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </form>
                </div>
            </div>
        </div>
    </div>
</div>