{#
/**
 * @file
 * Theme override for Alertes Sanitaires view.
 */
#}
<div class="card border-0 p-2" style="background: #FFF4F4;">
    <div class="card-body p-4">
        <h4 class="card-title mb-4">
            <i class="fa-solid fa-triangle-exclamation text-danger me-2"></i>
            <span class="fw-bold text-danger">Alertes sanitaires</span>
        </h4>

        {% if rows %}
            <div class="alertes-sanitaires">
                {{ rows }}
            </div>
        {% else %}
            {{ empty }}
        {% endif %}

        <div class="text-center mt-4">
            <a href="https://mspp.gouv.ht/alertes-sanitaires" class="btn btn-danger">Toutes les alertes</a>
        </div>
    </div>
</div>
