{#
/**
 * @file
 * Template for the public medications list.
 *
 * Available variables:
 * - medications: Array of medication objects.
 */
#}

<div class="row">
    <div class="col-md-12">
        <div class="search-container mb-4">
            <form id="medicationSearchForm" onsubmit="return false;">
                <div class="input-group shadow-sm">
                    <input type="text" id="medicationSearch" class="form-control border-end-0" placeholder="{{ 'Rechercher un médicament...'|t }}" style="border-radius: 0.375rem 0 0 0.375rem; padding: 0.75rem 1rem; font-size: 1rem;"/>
                    <button type="submit" class="btn btn-primary" style="border-radius: 0 0.375rem 0.375rem 0; padding: 0.75rem 1.25rem;">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>

        <div class="table-responsive">
            <table class="table">
                <thead class="table-light">
                    <tr>
                        <th scope="col">{{ 'Nom'|t }}</th>
                        <th scope="col">{{ 'Forme'|t }}</th>
                        <th scope="col">{{ 'Type'|t }}</th>
                        <th scope="col">{{ 'Dosage'|t }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for medication in medications %}
                        <tr class="medication-item">
                            <td class="fw-bold">{{ medication.name }}</td>
                            <td>{{ medication.shape }}</td>
                            <td>{{ medication.form }}</td>
                            <td>{{ medication.dosage }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center">{{ 'Aucun médicament trouvé.'|t }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            
            <div class="load-more-container text-center mt-4" id="loadMoreContainer">
                <button type="button" class="btn btn-primary" id="loadMoreBtn">
                    <span class="load-more-text">{{ 'Charger plus'|t }}</span>
                    <span class="load-more-spinner d-none">
                        <i class="fas fa-spinner fa-spin"></i> {{ 'Chargement...'|t }}
                    </span>
                </button>
                <div class="mt-2 text-muted">
                    <span id="loadedCount">{{ medications|length }}</span> / <span id="totalCount">{{ total }}</span> {{ 'médicaments affichés'|t }}
                </div>
            </div>
        </div>
    </div>
</div>